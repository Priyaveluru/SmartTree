<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="cmpe235.smarttree.MainActivity">

    <EditText
        android:id="@+id/email_signup"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="@drawable/border_selecter"
        android:hint=" Email"
        android:fontFamily="Helvetica Neue"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/password_signup"
        android:layout_alignLeft="@+id/phone_signup"
        android:layout_alignStart="@+id/phone_signup"
        android:layout_marginTop="51dp" />

    <EditText
        android:id="@+id/password_signup"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:hint=" Password"
        android:fontFamily="Helvetica Neue"
        android:background="@drawable/border_selecter"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/name_signup"
        android:layout_alignLeft="@+id/name_signup"
        android:layout_alignStart="@+id/name_signup" />

    <EditText
        android:id="@+id/name_signup"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:hint=" Full Name"
        android:fontFamily="Helvetica Neue"
        android:background="@drawable/border_selecter"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/phone_signup"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:hint=" Phone"
        android:background="@drawable/border_selecter"
        android:ems="10"
        android:fontFamily="Helvetica Neue"
        android:inputType="number"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/email_signup"
        android:layout_alignRight="@+id/reset"
        android:layout_alignEnd="@+id/reset" />

    <Button
        android:id="@+id/button_signup"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/phone_signup"
        android:layout_alignStart="@+id/phone_signup"
        android:layout_below="@+id/phone_signup"
        android:layout_marginTop="46dp"
        android:background="@drawable/button_stroke"
        android:text="Sign up" />

    <Button
        android:id="@+id/reset"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/button_signup"
        android:layout_alignBottom="@+id/button_signup"
        android:layout_alignEnd="@+id/password_signup"
        android:layout_alignRight="@+id/password_signup"
        android:background="@drawable/button_stroke"
        android:text="Reset" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name_signup"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/name_signup"
        android:layout_marginTop="23dp"
        android:text="REGISTER NEW ACCOUNT"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bar"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/button_signup"
        android:layout_alignStart="@+id/button_signup"
        android:layout_below="@+id/reset"
        android:layout_marginTop="18dp"
        android:background="@drawable/button_stroke"
        android:text="Register with Barcode"
        android:layout_alignRight="@+id/reset"
        android:layout_alignEnd="@+id/reset" />

</RelativeLayout>
