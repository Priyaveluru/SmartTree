<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="cmpe235.smarttree.MainActivity">


    <EditText
        android:id="@+id/email_login"
        style="@android:style/Widget.AutoCompleteTextView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="39dp"
        android:background="@drawable/border_selecter"
        android:ems="10"
        android:fontFamily="Helvetica Neue"
        android:hint=" Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint=" Password"
        android:background="@drawable/border_selecter"
        android:ems="10"
        android:fontFamily="Helvetica Neue"
        android:inputType="textPassword"
        android:layout_below="@+id/email_login"
        android:layout_alignLeft="@+id/email_login"
        android:layout_alignStart="@+id/email_login"
        android:layout_marginTop="47dp"
        android:layout_alignRight="@+id/email_login"
        android:layout_alignEnd="@+id/email_login" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:background="@drawable/button_stroke"
        android:text="Log in"
        android:layout_alignTop="@+id/photo_video"
        android:layout_alignLeft="@+id/password_login"
        android:layout_alignStart="@+id/password_login" />

    <Button
        android:id="@+id/photo_video"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginTop="69dp"
        android:background="@drawable/button_stroke"
        android:onClick="gotoSignup"
        android:text="Sign up"
        android:layout_below="@+id/password_login"
        android:layout_alignRight="@+id/password_login"
        android:layout_alignEnd="@+id/password_login" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="63dp"
        android:text="LOG IN TO YOUR ACCOUNT"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

</RelativeLayout>
