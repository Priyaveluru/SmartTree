<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cmpe235.smarttree.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email:"
        android:textStyle="bold"
        android:id="@+id/textView5"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="138dp"
        android:layout_below="@+id/logo"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Password:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:layout_below="@+id/email_login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" />

    <EditText
        android:id="@+id/email_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView5"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/textView6"

        android:background="?attr/colorButtonNormal"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_alignRight="@+id/photo_video"
        android:layout_alignEnd="@+id/photo_video" />

    <EditText
        android:id="@+id/password_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/email_login"
        android:layout_alignStart="@+id/email_login"
        android:background="?attr/colorButtonNormal"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_alignRight="@+id/photo_video"
        android:layout_alignEnd="@+id/photo_video" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/photo_video"
        android:layout_alignBottom="@+id/photo_video"
        android:layout_toLeftOf="@+id/password_login"
        android:layout_toStartOf="@+id/password_login"
        android:background="@android:color/holo_green_light"
        android:text="Log in" />

    <Button
        android:id="@+id/photo_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:background="@android:color/holo_green_light"
        android:onClick="gotoSignup"
        android:text="Sign up"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/logo"
        android:layout_toEndOf="@+id/logo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_green_light"
         android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="LOG INTO YOUR ACCOUNT"
        android:layout_below="@+id/logo"
        android:layout_alignLeft="@+id/login_btn"
        android:layout_alignStart="@+id/login_btn"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp" />

</RelativeLayout>
