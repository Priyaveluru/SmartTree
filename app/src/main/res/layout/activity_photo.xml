<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:background="@drawable/background"
    tools:context="cmpe235.smarttree.MainActivity"
    android:weightSum="1">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="100dp"
        android:layout_height="300dp"
        android:src="@drawable/photo_share"
        android:layout_alignBottom="@+id/btnCapturePicture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btnCapturePicture"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:background="@drawable/button_stroke"
        android:text="Take a Picture"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/share"
        android:layout_alignRight="@+id/share"
        android:layout_alignEnd="@+id/share"
        android:layout_alignLeft="@+id/share"
        android:layout_alignStart="@+id/share" />

    <Button
        android:id="@+id/share"
        android:layout_width="133dp"
        android:layout_height="37dp"
        android:background="@drawable/button_stroke"
        android:text="Share Photo"
        android:layout_marginBottom="140dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

